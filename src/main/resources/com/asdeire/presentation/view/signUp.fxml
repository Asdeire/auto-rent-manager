<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.*?>
<VBox fx:id="rootNode" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.asdeire.presentation.controller.SignUpController"
      alignment="CENTER"
      spacing="20"
      styleClass="form-container">
    <Label text="Registration" styleClass="title-1" />
    <VBox alignment="CENTER" spacing="10.0">

        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="usernameField" promptText="Username" />
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="emailField" promptText="Email"/>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <PasswordField fx:id="passwordField" promptText="Password" />
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="submitButton" onAction="#onSubmit" text="Submit" styleClass="accent"/>
        </HBox>
    </VBox>
</VBox>
