<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns:atlantafx="atlantafx.styles" alignment="CENTER"
      spacing="20" styleClass="form-container"
      fx:controller="com.asdeire.presentation.controller.SignInController">
    <Label text="Авторизація в систему" styleClass="title-1" />

    <VBox spacing="10" alignment="CENTER">
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="usernameField" promptText="Логін" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <PasswordField fx:id="passwordField" promptText="Пароль" />
        </HBox>
        <CheckBox fx:id="rememberMeCheckBox" text="Запам'ятати мене" />

        <HBox spacing="10.0" alignment="CENTER">
        <Button text="Вхід" onAction="#handleLogin" styleClass="accent" />
        <Button text="Реєстрація" onAction="#onSignUp" styleClass="accent"/>
        </HBox>
    </VBox>
</VBox>