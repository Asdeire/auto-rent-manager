<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns:atlantafx="atlantafx.styles"
      styleClass="form-container" alignment="CENTER"
      fx:controller="com.asdeire.presentation.controller.SignInController">
    <VBox spacing="10" alignment="CENTER">
    <Label text="Authorization" styleClass="title-1"/>
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="usernameField" promptText="Username"/>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <PasswordField fx:id="passwordField" promptText="Password"/>
        </HBox>
        <CheckBox fx:id="rememberMeCheckBox" text="Remember me"/>

        <HBox spacing="10.0" alignment="CENTER">
            <Button text="Login" onAction="#handleLogin" styleClass="accent"/>
            <Button text="SignUp" onAction="#onSignUp" />
        </HBox>
        <Button minWidth="35" fx:id="themeChangeButton" onAction="#handleTheme" style="-fx-background-color: transparent"/>
    </VBox>
</VBox>